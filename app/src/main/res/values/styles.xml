<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="android:fontFamily">@font/cairo_light</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#ffff</item>
        <!--<item name="android:background">@mipmap/menu</item>-->
    </style>
    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/enter_from_left</item>
        <item name="android:windowExitAnimation">@anim/exit_out_right</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#e1e1e1</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/colorAccent</item> <!-- activated color change as you wish -->
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>
</resources>
